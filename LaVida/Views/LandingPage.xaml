<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaVida.Views.LandingPage">
    <ContentPage.Content >
        
        <StackLayout BackgroundColor="Black" VerticalOptions="FillAndExpand"  >
            <Image Source="LaVida_Logo.png" VerticalOptions="Center" Margin="15,100,15,5" HeightRequest="300" WidthRequest="300" ></Image>
            <Label Text="Welcome!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold" TextColor="WhiteSmoke" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>