<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LaVida.Views.Cells.OutgoingViewCell">
    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource LightOwnCellColor}, Dark={StaticResource DarkOwnCellColor}}"
            Padding="10"
            Rotation="180"
            FlowDirection="LeftToRight"
            HasShadow="false"
            Margin="5,10,80,10"
            CornerRadius="15"
            >
        <Label Text="{Binding Message}" 
                  TextColor="White" BackgroundColor="Transparent"/>
        </Frame>
</ViewCell>
